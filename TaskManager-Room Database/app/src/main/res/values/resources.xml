<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardView.">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/dp_30</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:layout_marginEnd">@dimen/dp_30</item>
        <item name="cardCornerRadius">@dimen/dp_15</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
    </style>

    <style name="tvHeader">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tvActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">@dimen/dp_20</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="lyTodayUpdate">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">@dimen/dp_100</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">@dimen/dp_100</item>
        <item name="background">@color/black</item>
    </style>


    <style name="tvTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginStart">@dimen/dp_20</item>
    </style>

    <dimen name="dp_20">20dp</dimen>
    <dimen name="dp_100">100dp</dimen>
    <dimen name="dp_50">50dp</dimen>
    <dimen name="dp_15">15dp</dimen>
    <dimen name="dp_30">30dp</dimen>

</resources>
